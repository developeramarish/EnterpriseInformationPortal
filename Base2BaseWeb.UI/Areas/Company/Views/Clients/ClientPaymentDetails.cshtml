@model ClientPaymentDetailsEditViewModel
<form id="clientPaymentDetailsForm" class="form-horizontal" method="post" asp-action="ClientPaymentDetails" asp-controller="Clients" asp-area="Company">
    <div class="client-payment-details-container">
        <div class="paymentDetails-container">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="row">
                <div class="col-md-10">
                    <div class="payments-details-container panel panel-default">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="BankName" class="control-label col-md-3"></label>
                                    <div class="col-md-9">
                                        <input asp-for="BankName" class="form-control" />
                                    </div>
                                    <span asp-validation-for="BankName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BankAccount" class="control-label col-md-3"></label>
                                    <div class="col-md-9">
                                        <input asp-for="BankAccount" class="form-control" />
                                    </div>
                                    <span asp-validation-for="BankAccount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Mfo" class="col-md-6 control-label"></label>
                                    <div class="col-md-6">
                                        <input asp-for="Mfo" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Mfo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Okpo" class="col-md-6 control-label"></label>
                                    <div class="col-md-6">
                                        <input asp-for="Okpo" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Okpo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Certificate" class="col-md-6 control-label"></label>
                                    <div class="col-md-6">
                                        <input asp-for="Certificate" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Certificate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FiscalNumber" class="col-md-6 control-label"></label>
                                    <div class="col-md-6">
                                        <input asp-for="FiscalNumber" class="form-control" />
                                    </div>
                                    <span asp-validation-for="FiscalNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="contract-container panel panel-default">
                    <div class="panel-heading">
                        <div><label class="panel-custom-header control-label">Договор</label></div>
                    </div>
                    <div class="row row-after-panel-heading">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ContractNumber" class="col-md-6 control-label"></label>
                                <div class="col-md-6">
                                    <input asp-for="ContractNumber" class="form-control" />
                                </div>
                                <span asp-validation-for="ContractNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Contractors" class="col-md-6 control-label"></label>
                                <div class="col-md-6">
                                    <select asp-for="ContractorId" class="form-control" 
                                            asp-items="@(new SelectList(Model.Contractors,"Id","Name"))"></select>
                                    @*<select class="form-control">
                                        @for (int i=0;i<Model.Contractors.Count;i++)
                                        {
                                            <option name="Contractors[@i].ContractorId" value="@Model.Contractors[i].ContractorId">
                                        @Model.Contractors[i].ContractorName</option>
                                        }
                                    </select>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ContractStartDate" class="col-md-6 control-label"></label>
                                <div class="col-md-6">
                                    <div class="input-group date"
                                            data-provide="datepicker"
                                            data-date-autoclose="true"
                                            data-date-format="dd.mm.yyyy"
                                            data-date-language="@System.Globalization.CultureInfo.CurrentCulture.Name.Substring(0,2)">
                                        <input asp-for="ContractStartDate" type="text" class="form-control"
                                                name="ContractStartDate" />
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ContractEndDate" class="col-md-6 control-label"></label>
                                <div class="col-md-6">
                                    <div class="input-group date"
                                            data-provide="datepicker"
                                            data-date-autoclose="true"
                                            data-date-format="dd.mm.yyyy"
                                            data-date-language="@System.Globalization.CultureInfo.CurrentCulture.Name.Substring(0,2)">
                                        <input asp-for="ContractEndDate" type="text" class="form-control"
                                                name="ContractEndDate" />
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
