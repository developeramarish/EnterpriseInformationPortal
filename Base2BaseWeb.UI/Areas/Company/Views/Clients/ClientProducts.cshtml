@model ClientProductsEditViewModel

<form id="clientProductsForm" class="form-horizontal" method="post" asp-action="ClientProducts" asp-controller="Clients" asp-area="Company">
    <div class="client-products-container">
        <div class="row">
            <div class="col-lg-8 col-md-9 col-sm-12 col-xs-12">
                <input asp-for="Id" type="hidden"/>
                <table class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th class="text-center col-lg-4 col-md-4 col-sm-9 col-xs-9">Наименование работ</th>
                            <th class="text-center col-lg-2 col-md-2 col-sm-3 col-xs-3">Цена (авто)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i=0; i< Model.ProductsAll.Count;i++)
                        {
                            <tr>
                                <td>
                                    @if (Model.ProductsClient.Exists(pc => pc.ProductId == Model.ProductsAll[i].ProductId))
                                    {
                                        <input asp-for="ProductsAll[i].Active" checked/>
                                    }
                                    else
                                    {
                                        <input asp-for="ProductsAll[i].Active"/>
                                    }
                                    <label asp-for="ProductsAll[i].ProductId" class="control-label">@Model.ProductsAll[i].Name</label>
                                    <input asp-for="ProductsAll[i].ProductId" type="hidden"/>
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
