@model ClientsIndexViewModel

<table id="clientsTable" class="table table-hover table-responsive table-striped table-bordered clients-thead-grey">
    <thead class="clients-thead-grey">
        <tr>
            <th class="col-md-3">Наименование клиента</th>
            <th class="col-md-2 text-center">Группа</th>
            <th class="col-md-3 text-center">Контактное лицо</th>
            <th class="text-center">Телефон</th>
            <th class="col-md-1 text-center">Сальдо</th>
            <th class="text-center">Дата подписания</th>
            <th class="text-center">Дата окончания</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td><a asp-area="Company" asp-action="Edit" asp-route-id="@client.Id">@client.Name</a></td>
                <td class="text-center">@client.GroupName</td>
                <td class="text-center">@client.ContactName</td>
                <td class="text-center">@client.PhoneNumber</td>
                <td class="text-center">@client.Balance.GetValueOrDefault().ToString("N2") </td>
                <td class="text-center">@client.ContractStartDate.GetValueOrDefault().ToShortDateString()</td>
                <td class="text-center">@client.ContractEndDate.GetValueOrDefault().ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>