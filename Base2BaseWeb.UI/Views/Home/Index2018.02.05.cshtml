@{
    ViewData["Title"] = "Index";
}

<!--Consider to use Carousel with Company's mainstream Products-->
<div class="row banner-container">
    <div class="jumbotron text-center">
        <div class="banner-item">
            <h2 class="banner-header">Ускорьте ваши продажи с лучшими решениями для торговли</h2>
            <p class="banner-description">
                Base2Base это POS и e-commerce платформа для ПК и мобильных устройств. Решение покрывает продажи торгового зала,
                учет товаров, управленческую отчетность, привлечение и удержание клиентов.
            </p>
            <form class="form-inline banner-input">
                <div class="input-group">
                    <input type="email" class="form-control" size="50" placeholder="Email Адрес" required>
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-danger">Бесплатная демо-версия</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



    <!--Преимущества работы с компанией-->
