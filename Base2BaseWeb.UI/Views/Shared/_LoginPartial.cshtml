@using Microsoft.AspNetCore.Identity
@using Base2BaseWeb.Identity.Models
@using Base2BaseWeb.UI.Helpers

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<div class="menu-right-static">
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="ul-menu-static-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    <span class="fa fa-user"></span> @UserManager.GetUserName(User)
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link">Log out</button>            
    @*<button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>*@
            </li>
        </ul>
    </form>
</div>
}
else
{
    <li class="menu-right-static"><a asp-area="" asp-controller="Account" asp-action="Login">
    <span class="fa fa-sign-in fa-lg"></span> Вход</a>
    </li>
    @*<ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
        </ul>*@
}
