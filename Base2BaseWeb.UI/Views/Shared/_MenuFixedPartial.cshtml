                            <img class="logo-small" src="~/images/big-logo.png" />
                        </a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav menu-fixed-center" id="menu-fixed-center">
                            <li><a asp-area="" asp-controller="Manage" asp-action="Index">Профиль</a></li>
                            @if (isAdmin)
                            {
                                <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Администрирование</a></li>
                            }
                        </ul>
                    </div>
                </nav>
