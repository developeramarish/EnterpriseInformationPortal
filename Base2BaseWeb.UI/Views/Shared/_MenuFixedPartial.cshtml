@using Microsoft.AspNetCore.Identity
@using Base2BaseWeb.Identity.Models
@using Base2BaseWeb.UI.Helpers

@inject SignInManager<AppUser> SignInManager
@{
    bool isAdmin = false;
    if (User.Identity.Name != null)
    {
        var user = await SignInManager.UserManager.FindByNameAsync(User.Identity.Name);
        if (user != null)
        {
            isAdmin = await SignInManager.UserManager.IsInRoleAsync(user,"Admin");
        }
        <div class="menu-fixed">
            <nav class="navbar navbar-default">
                @{ 
                    Html.RenderPartial("_MenuFixedHeaderPartial");
                }
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav menu-fixed-center" id="menu-fixed-center">
                        @if (isAdmin)
                        {
                            <li><a data-unique-attr="1" asp-area="Company" asp-controller="Clients" asp-action="Index">Клиенты</a></li>
                            <li><a data-unique-attr="2" asp-area="Company" asp-controller="Support" asp-action="Index">Тех-поддержка</a></li>
                            <li><a data-unique-attr="3" href="#">Магазин</a></li>
                            <li><a data-unique-attr="4" href="#">Дата-Центр</a></li>
                            <li><a data-unique-attr="5" href="#">Контент сайта</a></li>
                            <li><a data-unique-attr="6" asp-area="Admin" asp-controller="Roles" asp-action="Index">Администрирование</a></li>
                        }
                        @*<li><a data-unique-attr="7" asp-area="" asp-controller="Manage" asp-action="Index">Мой кабинет</a></li>*@

                    </ul>
                </div>
            </nav>
        </div>
    }
    else
    {
        <div class="menu-fixed">
            <nav class="navbar navbar-default">
                @{
                    Html.RenderPartial("_MenuFixedHeaderPartial");
                }
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav menu-fixed-center" id="menu-fixed-center">
                        <li><a data-unique-attr="1" asp-area="" asp-controller="Home" asp-action="Store">Для магазина</a></li>
                        <li><a data-unique-attr="2" asp-area="" asp-controller="Home" asp-action="Supermarket">Для супермаркета</a></li>
                        <li><a data-unique-attr="3" asp-area="" asp-controller="Home" asp-action="Cafe" disabled="disabled">Для кафе</a></li>
                        <li><a data-unique-attr="4" asp-area="" asp-controller="Home" asp-action="Kiosk">Для киосков</a></li>
                        <li><a data-unique-attr="5" asp-area="" asp-controller="Home" asp-action="Equipment">Оборудование</a></li>
                    </ul>
                    <div class="navbar-nav menu-fixed-right" id="menu-fixed-right">
                        @*<div class="menu-phone-numbers">
                            <span class="fa fa-phone"></span>
                            <span> (044) <strong class="menu-phone-number">225-24-05</strong></span>
                        </div>*@
                        <div class="menu-contacts">
                            <a class="btn btn-border-blue" asp-controller="Home" asp-action="Contacts">
                                <span class="fa fa-envelope"></span> Написать нам
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    }
}



